@model BulkyBook_Web.Models.VM.ProductDeleteVM

<form asp-action="DeleteProduct">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Product</h1>
        <hr />
        <input hidden asp-for="Product.Id" />
        <div class="row">

            <div class="col-2">
                <label asp-for="Product.Title" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.Title" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Product.CategoryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Product.CategoryId" disabled class="form-select" asp-items="@Model.CategoryList">
                    <option disabled selected>--Select Category--</option>
                </select>
            </div>
            <div class="col-2">
                <label asp-for="Product.Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Product.Description" disabled class="form-control" rows="5"></textarea>

            </div>
            <div class="col-2">
                <label asp-for="Product.ISBN" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Product.ISBN" disabled class="form-control" rows="5"></textarea>

            </div>
            <div class="col-2">
                <label asp-for="Product.Author" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Product.Author" disabled class="form-control" rows="5"></textarea>

            </div>
            <div class="col-2">
                <label asp-for="Product.ListPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Product.ListPrice" disabled class="form-control" rows="5"></textarea>
                <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Product.Price" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Product.Price" disabled class="form-control" rows="5"></textarea>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Product.Price50" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Product.Price50" disabled class="form-control" rows="5"></textarea>
                <span asp-validation-for="Product.Price50" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Product.Price100" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Product.Price100" disabled class="form-control" rows="5"></textarea>
                <span asp-validation-for="Product.Price100" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Product.ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Product.ImageUrl" disabled class="form-control" />
                <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexProduct" asp-controller="Product" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
